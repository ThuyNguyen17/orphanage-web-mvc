@model IEnumerable<Event>

<style>
    .event-section {
        padding: 5rem 0;
        background: var(--primary);
        position: relative;
        overflow: hidden;
    }

    .section-title {
        text-align: center;
        margin-bottom: 4rem;
        position: relative;
        z-index: 1;
    }

        .section-title h2 {
            font-size: 2.8rem;
            font-weight: 800;
            color: var(--primary);
            margin-bottom: 1rem;
            position: relative;
        }

            .section-title h2::after {
                content: '';
                position: absolute;
                width: 80px;
                height: 4px;
                background: var(--primary);
                bottom: -10px;
                left: 50%;
                transform: translateX(-50%);
                border-radius: 2px;
            }

        .section-title p {
            color: var(--gray);
            font-size: 1.2rem;
            max-width: 700px;
            margin: 0 auto;
        }

    .event-card {
        border: none;
        border-radius: 15px;
        transition: all 0.3s ease;
        overflow: hidden;
        background: white;
        margin-bottom: 2rem;
        box-shadow: 0 5px 15px rgba(255, 107, 139, 0.1);
        position: relative;
        display: flex;
        flex-direction: column;
        height: 100%;
    }

        .event-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(255, 107, 139, 0.2);
        }

    .event-image-container {
        height: 220px;
        overflow: hidden;
        position: relative;
    }

    .event-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .event-card:hover .event-image {
        transform: scale(1.05);
    }

    .event-date {
        position: absolute;
        top: 15px;
        left: 15px;
        background: white;
        padding: 8px 15px;
        border-radius: 8px;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
        font-weight: bold;
        color: var(--primary);
        text-align: center;
        line-height: 1.2;
        z-index: 2;
    }

    .event-date-day {
        font-size: 1.5rem;
        display: block;
    }

    .event-date-month {
        font-size: 0.8rem;
        text-transform: uppercase;
        display: block;
    }

    .event-body {
        padding: 1.5rem;
        flex-grow: 1;
    }

    .event-title {
        font-size: 1.4rem;
        font-weight: 700;
        color: var(--dark);
        margin-bottom: 1rem;
        line-height: 1.3;
    }

    .event-meta {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        margin-bottom: 1.5rem;
    }

    .event-meta-item {
        display: flex;
        align-items: center;
        color: var(--gray);
        font-size: 0.9rem;
    }

        .event-meta-item i {
            margin-right: 0.5rem;
            color: var(--primary);
        }

    .event-description {
        color: var(--gray);
        line-height: 1.6;
        margin-bottom: 1.5rem;
        font-size: 0.95rem;
    }

    .event-footer {
        display: flex;
        justify-content: flex-end;
        padding: 1rem 1.5rem;
        background: rgba(255, 107, 139, 0.8);
        border-top: 1px solid rgba(0, 0, 0, 0.05);
        margin-top: auto;
    }

    .event-cta {
        background: var(--primary);
        color:white;
        padding: 0.6rem 1.5rem;
        border-radius: 30px;
        text-decoration: none;
        font-weight: 600;
        font-size: 0.9rem;
        transition: all 0.3s ease;
    }

        .event-cta:hover {
            background: #ff5432;
            transform: translateY(-2px);
            color: white;
        }

    /* Responsive */
    @@media (max-width: 992px) {
        .event-title {
            font-size: 1.3rem;
        }
    }

    @@media (max-width: 768px) {
        .section-title h2 {
            font-size: 2.2rem;
        }

        .event-card {
            max-width: 400px;
            margin-left: auto;
            margin-right: auto;
        }
    }
</style>

<section class="event-section">
    <div class="container">
        <div class="section-title">
            <h2>Events at the Orphanage Center – Past and Ongoing</h2>
            <p>Meaningful activities bringing joy and hope to orphaned children</p>
        </div>

        <div class="row g-4">
            @foreach (var eventItem in Model)
            {
                <div class="col-lg-4 col-md-6 d-flex">
                    <div class="event-card h-100 d-flex flex-column">
                        <div class="event-image-container">
                            <img src="~/@eventItem.ImageUrl" class="event-image" alt="@eventItem.ImageUrl">
                        </div>
                        <div class="event-body flex-grow-1">
                            <h3 class="event-title">@eventItem.Title</h3>
                            <div class="event-meta">
                                <div class="event-meta-item">
                                    <i class="fas fa-clock"></i> @eventItem.Time
                                </div>
                                <div class="event-meta-item">
                                    <i class="fas fa-map-marker-alt"></i> @eventItem.Location
                                </div>
                            </div>
                            <p class="event-description">@eventItem.Description</p>
                        </div>
                        <div class="event-footer mt-auto">
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
