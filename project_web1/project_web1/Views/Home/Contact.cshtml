@{
    ViewData["Title"] = "Home Contact";
}
<div class="container-fluid ">
    <div class="container py-2">
        <div class="p-5 bg-light rounded">
            <div class="mx-auto text-center wow fadeIn" data-wow-delay="0.1s" style="max-width: 700px;">
                <h4 class="text-primary mb-4 border-bottom border-primary border-2 d-inline-block p-2 title-border-radius">Get In Touch</h4>
                <h1 class="display-3">We'd Love to Hear From You</h1>
                <p class="mb-5">Whether you're interested in volunteering, donating, or learning more about our work with children, our team is ready to answer your questions and discuss how you can make a difference.</p>
            </div>
            <div class="row g-5 mb-5">
                <!-- Address -->
                <div class="col-lg-4 wow fadeIn" data-wow-delay="0.1s">
                    <div class="d-flex w-100 border border-primary p-4 rounded bg-white h-100">
                        <i class="fas fa-map-marker-alt fa-2x text-primary me-4"></i>
                        <div class="">
                            <h4>Our Center</h4>
                            <p class="mb-2">123 Phan Dang Luu, District Binh Thanh</p>
                            <p class="mb-0">Ho Chi Minh City, Vietnam</p>
                        </div>
                    </div>
                </div>

                <!-- Email -->
                <div class="col-lg-4 wow fadeIn" data-wow-delay="0.3s">
                    <div class="d-flex w-100 border border-primary p-4 rounded bg-white h-100">
                        <i class="fas fa-envelope fa-2x text-primary me-4"></i>
                        <div class="">
                            <h4>Email Us</h4>
                            <p class="mb-2">General inquiries: intrungtamtre@gmail.com</p>
                            <p class="mb-0">Donations: donate@sunshinecenter.org</p>
                        </div>
                    </div>
                </div>

                <!-- Phone -->
                <div class="col-lg-4 wow fadeIn" data-wow-delay="0.5s">
                    <div class="d-flex w-100 border border-primary p-4 rounded bg-white h-100">
                        <i class="fa fa-phone-alt fa-2x text-primary me-4"></i>
                        <div class="">
                            <h4>Call Us</h4>
                            <p class="mb-2">Main office: +84 28 3823 4567</p>
                            <p class="mb-0">Emergency: +84 912 345 678</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row g-5">
                <!-- Contact Form -->
                <div class="col-lg-6 wow fadeIn" data-wow-delay="0.3s">
                    <form action="">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <input type="text" class="form-control py-3 border-primary" placeholder="Your Name" required>
                            </div>
                            <div class="col-md-6">
                                <input type="email" class="form-control py-3 border-primary" placeholder="Your Email" required>
                            </div>
                            <div class="col-12">
                                <select class="form-select py-3 border-primary">
                                    <option selected>What are you contacting us about?</option>
                                    <option>Volunteering</option>
                                    <option>Donations</option>
                                    <option>Child Sponsorship</option>
                                    <option>General Inquiry</option>
                                    <option>Other</option>
                                </select>
                            </div>
                            <div class="col-12">
                                <textarea class="form-control border-primary" rows="6" placeholder="Your Message" required></textarea>
                            </div>
                            <div class="col-12">
                                <button class="w-100 btn btn-primary py-3" type="submit">Send Message</button>
                            </div>
                        </div>
                    </form>
                </div>

                <!-- Map -->
                <div class="col-lg-6 wow fadeIn" data-wow-delay="0.5s">
                    <div class="border border-primary h-100 rounded overflow-hidden">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.126365068466!2d106.7122763152608!3d10.801826661739976!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x317528a459cb43ab%3A0x6c3d29d370b52a7e!2sHo%20Chi%20Minh%20City%2C%20Vietnam!5e0!3m2!1sen!2sus!4v1620000000000!5m2!1sen!2sus"
                                class="w-100 h-100" style="min-height: 300px;" allowfullscreen="" loading="lazy"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Contact End -->