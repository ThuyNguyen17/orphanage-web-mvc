@model project_web1.Models.ThuocMuaNgoai
@{
    ViewData["Title"] = "Edit phiếu mua thuốc";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_admin.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />


<div class="container mt-4">
    <div class="card shadow rounded-4">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h3 class="mb-0">@ViewData["Title"]</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="MaSoMuaThuoc" />

                <div class="mb-3">
                    <label asp-for="NgayMua" class="form-label fw-semibold">📅 Ngày mua</label>
                    <input asp-for="NgayMua" type="date" class="form-control" />
                    <span asp-validation-for="NgayMua" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NoiMua" class="form-label fw-semibold">🏪 Nơi mua</label>
                    <input asp-for="NoiMua" class="form-control" placeholder="Nhập tên nơi mua thuốc..." />
                    <span asp-validation-for="NoiMua" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TongTien" class="form-label fw-semibold">💰 Tổng tiền</label>
                    <input asp-for="TongTien" class="form-control" placeholder="Nhập tổng tiền (VNĐ)" />
                    <span asp-validation-for="TongTien" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="fas fa-save me-1"></i> Lưu thay đổi
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">
                        <i class="fas fa-arrow-left me-1"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
