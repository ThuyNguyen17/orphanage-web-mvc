@model project_web1.Models.NhaTaiTroViewModel

@{
    ViewData["Title"] = "Chỉnh sửa Nhà Tài Trợ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_admin.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

@section Styles {
    <link rel="stylesheet" href="~/css/sponsor.css" asp-append-version="true" />
    <style>
        /* CSS bổ sung theo yêu cầu */
        .edit-container { max-width: 800px; margin: 0 auto; }
        .card-header-custom {
            background: linear-gradient(135deg, #4361ee, #3f37c9);
            border-radius: 12px 12px 0 0;
            padding: 1.5rem;
            color: #fff;
        }
        .form-control-custom {
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            padding: 12px 15px;
            transition: all 0.3s;
        }
        .input-icon {
            color: #4361ee;
            background-color: rgba(67, 97, 238, 0.1);
            border-radius: 8px 0 0 8px;
        }
        .btn-save {
            background-color: #4361ee;
            border: none;
            padding: 10px 24px;
            border-radius: 8px;
            font-weight: 500;
            transition: all 0.3s;
            color: #fff;
        }
        .btn-save:hover {
            background-color: #3f37c9;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(67, 97, 238, 0.3);
        }
        .btn-cancel {
            border: 1px solid #e0e0e0;
            padding: 10px 24px;
            border-radius: 8px;
            font-weight: 500;
            transition: all 0.3s;
        }
        .btn-cancel:hover {
            background-color: #f8f9fa;
            border-color: #d0d0d0;
        }
    </style>
}

<div class="edit-container">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-action="Index" class="text-decoration-none text-muted">Quản lý Nhà Tài Trợ</a>
            </li>
            <li class="breadcrumb-item">
                <a asp-action="DetailsSpon" asp-route-id="@Model.NhaTaiTro.MaSoNtt" class="text-decoration-none text-muted">Chi tiết</a>

            </li>
            <li class="breadcrumb-item active">Chỉnh sửa</li>
        </ol>
    </nav>

    <!-- Main Card -->
    <div class="card shadow-sm border-0 overflow-hidden">
        <div class="card-header-custom">
            <div class="d-flex align-items-center">
                <div class="icon-wrapper rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                    <i class="fas fa-user"></i>
                </div>
                <div>
                    <h4 class="mb-0">Chỉnh sửa Nhà Tài Trợ</h4>
                    <p class="mb-0 opacity-75">ID: @Model.NhaTaiTro.MaSoNtt</p>
                </div>
            </div>
        </div>

        <div class="card-body p-4">
            <form asp-action="EditSpon" asp-controller="SponsorshipManagement" asp-area="admin" method="post" class="needs-validation" novalidate>
                <input type="hidden" asp-for="NhaTaiTro.MaSoNtt" />
                @Html.AntiForgeryToken()
                <!-- Form Row 1 -->
                <div class="row mb-4">
                    <div class="col-md-6 mb-3">
                        <label asp-for="NhaTaiTro.Ten" class="form-label fw-semibold">
                            Tên Nhà Tài Trợ <span class="text-danger">*</span>
                        </label>
                        <div class="input-group">
                            <span class="input-group-text input-icon">
                                <i class="fas fa-building"></i>
                            </span>
                            <input asp-for="NhaTaiTro.Ten" class="form-control form-control-custom" placeholder="Ví dụ: Công ty ABC" required />
                        </div>
                        <div class="invalid-feedback mt-1">
                            Vui lòng nhập tên nhà tài trợ.
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="NhaTaiTro.Sdt" class="form-label fw-semibold">
                            Số điện thoại <span class="text-danger">*</span>
                        </label>
                        <div class="input-group">
                            <span class="input-group-text input-icon">
                                <i class="fas fa-phone"></i>
                            </span>
                            <input asp-for="NhaTaiTro.Sdt" class="form-control form-control-custom" placeholder="Ví dụ: 0987654321" required />
                        </div>
                        <div class="invalid-feedback mt-1">
                            Vui lòng nhập số điện thoại hợp lệ.
                        </div>
                    </div>
                </div>

                <!-- Form Row 2 -->
                <div class="mb-4">
                    <label asp-for="NhaTaiTro.DiaChi" class="form-label fw-semibold">
                        Địa chỉ <span class="text-danger">*</span>
                    </label>
                    <div class="input-group">
                        <span class="input-group-text input-icon">
                            <i class="fas fa-map-marker-alt"></i>
                        </span>
                        <input asp-for="NhaTaiTro.DiaChi" class="form-control form-control-custom" placeholder="Ví dụ: 123 Đường ABC, Quận 1, TP.HCM" required />
                    </div>
                    <div class="invalid-feedback mt-1">
                        Vui lòng nhập địa chỉ.
                    </div>
                </div>

                <!-- Form Row 3 -->
                <div class="mb-4">
                    <label asp-for="NhaTaiTro.GhiChu" class="form-label fw-semibold">
                        Ghi chú
                    </label>
                    <div class="input-group">
                        <span class="input-group-text input-icon align-items-start pt-3">
                            <i class="fas fa-edit"></i>
                        </span>
                        <textarea asp-for="NhaTaiTro.GhiChu" class="form-control form-control-custom" rows="3" placeholder="Thông tin bổ sung..."></textarea>
                    </div>
                </div>

                <!-- Form Actions -->
                <div class="d-flex justify-content-end gap-3 mt-4 pt-3 border-top">
                    <a asp-action="DetailsSpon" asp-route-id="@Model.NhaTaiTro.MaSoNtt" class="btn btn-cancel">
                        <i class="fas fa-times me-2"></i> Hủy bỏ
                    </a>
                    <button type="submit" class="btn btn-save">
                        <i class="fas fa-save me-2"></i> Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>

</div>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-2" role="alert">
        <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@section Scripts {
    <script>
        (function () {
            'use strict';

            // Form validation with animations
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                        const invalidFields = form.querySelectorAll(':invalid');
                        invalidFields.forEach(field => {
                            field.classList.add('animate__animated', 'animate__shakeX');
                            setTimeout(() => {
                                field.classList.remove('animate__shakeX');
                            }, 1000);
                            if (field === invalidFields[0]) {
                                field.focus();
                            }
                        });
                    }
                    form.classList.add('was-validated');
                }, false);
            });

            // Phone input validation
            const phoneInput = document.querySelector('input[name="Sdt"]');
            if (phoneInput) {
                phoneInput.addEventListener('input', function(e) {
                    let value = e.target.value.replace(/\D/g, '');
                    if (value.length > 10) value = value.substring(0, 10);
                    e.target.value = value;
                    if (value.length < 10) {
                        phoneInput.classList.add('is-invalid');
                    } else {
                        phoneInput.classList.remove('is-invalid');
                    }
                });
            }
        })();
    </script>
}
